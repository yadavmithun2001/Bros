<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".Set_profile">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/set_profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/flag"
        app:civ_border_width="2dp"
        android:layout_gravity="center"
        app:civ_border_color="#03A9F4"
        android:layout_marginTop="100dp"
        tools:ignore="VectorDrawableCompat" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/updatepfimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pfimage"
        android:layout_marginTop="-45dp"
        android:layout_marginLeft="240dp"
        android:clickable="true"
        app:srcCompat="@drawable/ic_baseline_camera_alt_24" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profile Info"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PLease set your name and an Optional Profile Image"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"/>
    <EditText
        android:id="@+id/editName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Enter Profile Name"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20sp"/>

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Final Submit"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15sp"
        android:layout_marginLeft="15sp"
        android:backgroundTint="@color/Background"/>
</LinearLayout>