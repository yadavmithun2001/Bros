<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:background="@color/white"
    android:gravity="center">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/mobile_auth"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:text="OTP Verification" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OTP has been Sent to "
        android:gravity="center"
        android:textColor="#4CAF50"
        android:textSize="16sp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/cnf_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+91-74762074102"
        android:gravity="center"
        android:textSize="22dp"
        android:textColor="@color/Background"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="20dp">

        <EditText
            android:id="@+id/editotp1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:maxLength="1"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/edit_back"
            android:inputType="number" />
        <EditText
            android:id="@+id/editotp2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:maxLength="1"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/edit_back"
            android:inputType="number" />
        <EditText
            android:id="@+id/editotp3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:maxLength="1"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/edit_back"
            android:inputType="number" />
        <EditText
            android:id="@+id/editotp4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:maxLength="1"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/edit_back"
            android:inputType="number" />
        <EditText
            android:id="@+id/editotp5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:maxLength="1"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/edit_back"
            android:inputType="number" />
        <EditText
            android:id="@+id/editotp6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:maxLength="1"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/edit_back"
            android:inputType="number" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/wrongnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wrong Number ?"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginRight="50dp"
            android:drawableRight="@drawable/ic_info_outline_black_24dp"/>
        <TextView
            android:id="@+id/resendotp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESEND OTP"
            android:textSize="16sp"
            android:textColor="@color/black" />
    </LinearLayout>

    <Button
        android:id="@+id/verifyotp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/Title"
        android:text="Verify OTP" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-50dp"/>
</LinearLayout>